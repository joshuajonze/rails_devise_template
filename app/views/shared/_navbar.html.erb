<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 flex items-center">
          <svg class="h-8 w-8 text-red-600" fill="currentColor" viewBox="0 0 512 512">
            <circle cx="256" cy="256" r="256" />
          </svg>
          <span class="ml-2 text-xl font-bold">Rails Devise Template</span>
        </a>
      </div>
      <div class="flex items-center">
        <nav class="ml-6 flex items-center space-x-4">
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <%= link_to admin_dashboard_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-100", title: "Admin Dashboard" do %>
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 0 1 0-.255c.007-.378-.138-.75-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                </svg>
              <% end %>
            <% end %>
            <span class="text-gray-500 px-3 py-2">Welcome, <%= current_user.email %></span>
            <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-100" %>
            <%= link_to profile_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-100", title: "Profile" do %>
              <div class="flex items-center">
                <svg class="h-6 w-6 mr-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span>Profile</span>
              </div>
            <% end %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Sign up", new_user_registration_path, class: "px-3 py-2 rounded-md text-sm font-medium bg-red-600 text-white hover:bg-red-700" %>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
</header> 