<% content_for :title, "Forgot Password | Rails Devise Template" %>

<div class="max-w-md mx-auto">
  <div class="card">
    <h2 class="text-xl font-bold mb-6 text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-center text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>