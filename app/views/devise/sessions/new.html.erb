<% content_for :title, "Sign In | Rails Devise Template" %>

<div class="max-w-md mx-auto">
  <div class="card">
    <h2 class="text-xl font-bold mb-6 text-center">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Sign in", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-center text-sm">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>