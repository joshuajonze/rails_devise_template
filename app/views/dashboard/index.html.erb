<% content_for :title, "Dashboard | Rails Devise Template" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6">Dashboard</h1>
    
    <div class="mb-6">
      <h2 class="text-xl font-bold mb-4">Welcome, <%= current_user.email %></h2>
      <p class="text-gray-500">
        You're now signed in to your account. This is your dashboard where you can manage your account and access your data.
      </p>
    </div>
    
    <div class="bg-gray-100 p-4 rounded-md">
      <h3 class="font-bold mb-2">Account Information</h3>
      <div>
        <p><strong>Email:</strong> <%= current_user.email %></p>
        <p><strong>Joined:</strong> <%= current_user.created_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>
  </div>
</div>