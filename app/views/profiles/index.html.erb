<% content_for :title, "Profile | Rails Devise Template" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-6">Profile</h1>
    
    <div class="mb-6">
      <h2 class="text-xl font-bold mb-4">Account Information</h2>
      <div class="bg-gray-100 p-4 rounded-md">
        <div class="space-y-4">
          <div>
            <p class="text-sm text-gray-500">Email</p>
            <p class="font-medium"><%= current_user.email %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Member Since</p>
            <p class="font-medium"><%= current_user.created_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-6">
      <%= link_to "Edit Profile", edit_user_registration_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>
</div> 